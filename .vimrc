set nobackup
set noswapfile

set number "line numbers
set nowrap "no line wrapping
set tabstop=4 softtabstop=4 "tab 4 spaces
set shiftwidth=4
set expandtab "tab is actually spaces
set smartindent "auto indent lines
set smartcase
set incsearch "highlight current search result

set ttymouse=sgr "fix mouse in alacritty
set mouse=a "fix mouse in alacritty

set undodir=~/.vim/undodir
set undofile

syntax on "syntaxhighlighting

colorscheme elflord "colorscheme
"colorscheme gruvbox
"set background=dark
